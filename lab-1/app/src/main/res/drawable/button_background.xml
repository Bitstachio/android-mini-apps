<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF8A65"/> <!-- slightly darker orange -->
            <corners android:radius="16dp"/>
            <padding android:left="16dp" android:top="12dp" android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFA726"/> <!-- mellow orange -->
            <corners android:radius="16dp"/>
            <padding android:left="16dp" android:top="12dp" android:right="16dp" android:bottom="12dp"/>
            <stroke android:width="1dp" android:color="#E68927"/> <!-- subtle border -->
        </shape>
    </item>
</selector>
